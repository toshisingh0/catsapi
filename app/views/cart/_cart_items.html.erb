<% @order_items.each do |item| %>
  <h3><%= item.product.name %></h3>
  <h3><%= item.product.price %></h3>
  <%= form_with model :item do |f| %>
    <%= f.hidden_field :product_id, item.product.id %>
    <%= f.number_field :quantity, item.quantity.to_i %>
    <%= f.submit "update_cart" %>
    <%= link_to "Remove item", item, method: :delete, remote: true %>
  <% end %>
  <h2>Subtotal: <%= item.total %></h2>
<% end %>
<h3>Your current total has a total of: <%= current_order.subtotal %></h3>